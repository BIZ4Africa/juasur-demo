<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--Policy Detail Create -->

	<record id="policy_tree_view" model="ir.ui.view">
		<field name="name">policy.detail.tree</field>
		<field name="model">policy.details</field>
		<field name="arch" type="xml">
			<tree string="Policy Details">
				<field name="name"/>
				<field name="policy_code"/>
			</tree>
		</field>
	</record>

	<record id="policy_form_view" model="ir.ui.view">
		<field name="name">Policy Form View</field>
		<field name="model">policy.details</field>
		<field name="arch" type="xml">
			<form string="Policy Form View">
				<sheet>
					<group>
						<group>
							<field name="name"/>
						</group>

						<group>
							<field name="policy_code" required="1"/>
						</group>
					</group>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers"
						groups="base.group_user"/>
					<field name="message_ids" widget="mail_thread"/>
				</div>
			</form>
		</field>
	</record>


        <record id="action_policy_detail" model="ir.actions.act_window">
            <field name="name">Policy Type Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">policy.details</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="policy_tree_view"/>
        </record>
	
    <record id="action_policy_tree_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="policy_tree_view"/>
            <field name="act_window_id" ref="action_policy_detail"/>
        </record>
	
	 <record id="action_policy_form_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="policy_form_view"/>
            <field name="act_window_id" ref="action_policy_detail"/>
        </record>

	 <menuitem id="policy_details_menu"
            name="Policy Type"
            parent="menu_configuration"
            action="action_policy_detail"/>
            
            
	<record id="schemes_detail_view" model="ir.ui.view">
		<field name="name">schemes_detail Tree View</field>
		<field name="model">schemes.details</field>
		<field name="arch" type="xml">
			<tree string="schemes detail Tree View">
				<field name="product_name"/>
				<field name="name"/>
				<field name="policy_type"/>
				<field name="schemes_code"/>
				<field name="min_duration"/>
				<field name="max_duration"/>
				<field name="min_amount"/>
				<field name="max_amount"/>
				<field name="tax"/>
				<field name="interest_rate"/>
			</tree>
		</field>
	</record>

	<record id="schemes_form_view" model="ir.ui.view">
		<field name="name">Schemes Form View</field>
		<field name="model">schemes.details</field>
		<field name="arch" type="xml">
			<form string="Schemes Form View">
				<sheet>
					<h1>
						<field name="name" placeholder="Enter Scheme Name"/>
					</h1>
					<group>
						<group>
							<field name="product_name"
								domain="[('type','=','service')]"/>
							<field name="policy_type"/>
							<field name="schemes_code"/>
							<field name="min_duration" required="1"/>
							<field name="max_duration" required="1"/>
						</group>
						<group>
							<field name="min_amount"/>
							<field name="max_amount"/>
							<field name="tax"/>
							<field name="interest_rate"/>
							<field name="sq_id"/>
						</group>
					</group>
					<field name="agents" domain="[('is_agent','=',True)]"
						options="{'no_create' : True}"/>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers"
						groups="base.group_user"/>
					<field name="message_ids" widget="mail_thread"/>
				</div>
			</form>
		</field>
	</record>

	   <record id="action_schemes_detail" model="ir.actions.act_window">
            <field name="name">Schemes Detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">schemes.details</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="schemes_detail_view"/>
        </record>
	
	  <record id="action_schemes_detail_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="schemes_detail_view"/>
            <field name="act_window_id" ref="action_schemes_detail"/>
        </record>
	
	<record id="action_schemes_form_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="schemes_form_view"/>
            <field name="act_window_id" ref="action_schemes_detail"/>
        </record>

	<menuitem id="schemes_detail_menu"
            name="Schemes Form"
            action="action_schemes_detail"
            parent="menu_configuration"/>

</odoo>


